---
import { Image } from "astro:assets";
const { post } = Astro.props;

const date = new Date(post.data.pubDate);
---

<a href={`/blog/${post.slug}`}>
  <li class="border-pink-600 w-1/3">
    <Image
      class={"card-header"}
      src={post.data.cover}
      alt="HeaderImage"
      width={1080}
      height={1920}
      format={"webp"}
    />
    <h2 class="lg:text-2xl text-base">{post.data.title}</h2>
    <div class="flex flex-row justify-between text-sm">
      <p class="user text-sm lg:text-lg">
        @{post.data.author}
      </p>
      <p class="text-sm lg:text-lg">{date.toLocaleDateString("de")}</p>
    </div>
    <p class="lg:text-lg text-sm text-gray-700 dark:text-slate-200">
      {post.data.description}
    </p>
  </li>
</a>
<style>
  p {
    display: inline-block;
  }
  p.user {
    color: #f45db399;
  }
  p.user::before {
    content: "By ";
    color: #8c8c8c;
  }

  .card-header {
    border: 1px solid #f45db399;
    border-radius: 10px;
    margin-bottom: 0.5rem;
  }
</style>
