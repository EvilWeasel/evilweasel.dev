---
import { Image } from "astro:assets";
const { post } = Astro.props;

const date = new Date(post.data.pubDate);
---

<a href={`/blog/${post.slug}`}>
  <li class="border-pink-600 w-1/3">
    <Image
      class={"card-header"}
      src="https://picsum.photos/1920/1080"
      alt="HeaderImage"
      width={1080}
      height={1920}
      format={"avif"}
    />
    <h2 class="text-2xl">{post.data.title}</h2>
    <div class="flex flex-row justify-between text-sm">
      <p class="user">@{post.data.author}</p>
      <p>{date.toLocaleDateString("de")}</p>
    </div>
    <p class="text-lg">{post.data.description}</p>
  </li>
</a>
<style>
  p {
    display: inline-block;
  }
  p.user {
    color: #f45db399;
  }
  p.user::before {
    content: "By ";
    color: white;
  }
  .card-header {
    border: 1px solid #f45db399;
    border-radius: 10px;
    margin-bottom: 0.5rem;
  }
</style>
