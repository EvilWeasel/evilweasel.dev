---
import Layout from "@layouts/Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class={`prose prose-slate m-auto lg:prose-lg xl:prose-xl`}>
    <slot />
  </article>
</Layout>

<style>
  html.dark article {
    @apply prose-invert;
  }
</style>
